{% raw %}
  <style>
    .globo-form-app .panels.only-one-child {
      height: unset !important;
      overflow: unset;
    }
  </style>
  <script>
    document.addEventListener("globo.formbuilder.form.loaded",function(e){
      const panelsDiv = document.querySelector('#globo-formbuilder-'+e.detail.formId+' .panels');
      if (panelsDiv) {
          const panelChildren = panelsDiv.querySelectorAll('.panel');
          if (panelChildren.length === 1) {
            panelsDiv.classList.add('only-one-child');
          }
      }
    })
  </script>
{% endraw %}